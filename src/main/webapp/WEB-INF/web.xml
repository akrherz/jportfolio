<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>JPortfolio</display-name>
    <description>
      JPortfolio.
    </description>

    <!-- Set default time zone for this webapp -->
    <listener>
      <listener-class>org.collaborium.portfolio.TimeZoneInitializer</listener-class>
    </listener>



    <!-- Define servlets that are included in the example application -->
      <servlet>
        <servlet-name>
            ChatDispatch
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.chat.ChatDispatch
        </servlet-class>
    </servlet>

     <servlet>
        <servlet-name>
            ChatServer
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.chat.ChatServer
        </servlet-class>
    </servlet>

     <servlet>
        <servlet-name>
            ChatServlet
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.chat.ChatServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            uploadServlet
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.uploadServlet
        </servlet-class>
        <init-param>
            <param-name>
                uploadDir
            </param-name>
            <param-value>
                /home/tomcat/webapps/jportfolio/FILES
            </param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>
            forecast
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.forecast.forecast
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            forecastAdmin
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.forecast.forecastAdmin
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            jportfolio
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.jportfolio
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            users
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.users.users
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            jportfolioAdmin
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.jportfolioAdmin
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            jdot3
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.jdot.jdot3
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            jdotAdmin
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.jdot.jdotAdmin
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            jquizAdmin
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.jquizAdmin
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            jquiz
        </servlet-name>
        <servlet-class>
            org.collaborium.portfolio.jquiz
        </servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>ChatDispatch</servlet-name>
      <url-pattern>/servlet/ChatDispatch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>ChatServer</servlet-name>
      <url-pattern>/servlet/ChatServer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>ChatServlet</servlet-name>
      <url-pattern>/servlet/ChatServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>uploadServlet</servlet-name>
      <url-pattern>/servlet/uploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>forecast</servlet-name>
      <url-pattern>/servlet/forecast</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>forecastAdmin</servlet-name>
      <url-pattern>/servlet/forecastAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>jportfolio</servlet-name>
      <url-pattern>/servlet/jportfolio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>jportfolioAdmin</servlet-name>
      <url-pattern>/servlet/jportfolioAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>jdot3</servlet-name>
      <url-pattern>/servlet/jdot3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>jdotAdmin</servlet-name>
      <url-pattern>/servlet/jdotAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>jquizAdmin</servlet-name>
      <url-pattern>/servlet/jquizAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>jquiz</servlet-name>
      <url-pattern>/servlet/jquiz</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>users</servlet-name>
      <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
      <display-name>Example Security Constraint</display-name>
      <web-resource-collection>
         <web-resource-name>Protected Area</web-resource-name>
	 <!-- Define the context-relative URL(s) to be protected -->
         <url-pattern>/jsp/security/protected/*</url-pattern>
	 <!-- If you list http methods, only those methods are protected -->
	 <http-method>DELETE</http-method>
         <http-method>GET</http-method>
         <http-method>POST</http-method>
	 <http-method>PUT</http-method>
      </web-resource-collection>
      <auth-constraint>
         <!-- Anyone with one of the listed roles may access this area -->
         <role-name>tomcat</role-name>
	 <role-name>role1</role-name>
      </auth-constraint>
    </security-constraint>

    <!-- Default login configuration uses form-based authentication -->
    <login-config>
      <auth-method>FORM</auth-method>
      <realm-name>Example Form-Based Authentication Area</realm-name>
      <form-login-config>
        <form-login-page>/jsp/security/protected/login.jsp</form-login-page>
        <form-error-page>/jsp/security/protected/error.jsp</form-error-page>
      </form-login-config>
    </login-config>

    <!-- Security roles referenced by this web application -->
    <security-role>
      <role-name>role1</role-name>
    </security-role>
    <security-role>
      <role-name>tomcat</role-name>
    </security-role>

    <!-- Environment entry examples -->
    <!--env-entry>
      <env-entry-description>
         The maximum number of tax exemptions allowed to be set.
      </env-entry-description>
      <env-entry-name>maxExemptions</env-entry-name>
      <env-entry-value>15</env-entry-value>
      <env-entry-type>java.lang.Integer</env-entry-type>
    </env-entry-->
    <env-entry>
      <env-entry-name>minExemptions</env-entry-name>
      <env-entry-value>1</env-entry-value>
      <env-entry-type>java.lang.Integer</env-entry-type>
    </env-entry>
    <env-entry>
      <env-entry-name>foo/name1</env-entry-name>
      <env-entry-value>value1</env-entry-value>
      <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <env-entry>
      <env-entry-name>foo/bar/name2</env-entry-name>
      <env-entry-value>true</env-entry-value>
      <env-entry-type>java.lang.Boolean</env-entry-type>
    </env-entry>
    <env-entry>
      <env-entry-name>name3</env-entry-name>
      <env-entry-value>1</env-entry-value>
      <env-entry-type>java.lang.Integer</env-entry-type>
    </env-entry>
    <env-entry>
      <env-entry-name>foo/name4</env-entry-name>
      <env-entry-value>10</env-entry-value>
      <env-entry-type>java.lang.Integer</env-entry-type>
    </env-entry>

</web-app>
